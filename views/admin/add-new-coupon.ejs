    <script>
        const discountInput = document.getElementById('discount');
        const maximumDiscountInput = document.getElementById('maximumDiscountAmount');
        const discountTypeSelect = document.getElementById('discountType');

        discountTypeSelect.addEventListener('change', function () {
            if (this.value === 'Fixed') {
                maximumDiscountInput.value = discountInput.value;
            } else {
                maximumDiscountInput.value = '';
            }
        });

        discountInput.addEventListener('input', function () {
            if (discountTypeSelect.value === 'Fixed') {
                maximumDiscountInput.value = this.value;
            }
        });

        function validateCouponName(input) {
    const couponName = input.value.trim();
    const errorDiv = document.getElementById('couponNameError');
    
    if (!couponName) {
        errorDiv.textContent = 'Coupon name is required.';
        return false;
    } else if (!/^[a-zA-Z0-9\s]*$/.test(couponName)) {
        errorDiv.textContent = 'Only alphabets and numbers are allowed.';
        return false;
    } else {
        errorDiv.textContent = '';
        return true;
    }
}

function validateCouponCode(input) {
    const couponCode = input.value.trim();
    const errorDiv = document.getElementById('couponCodeError');
    
    if (!couponCode) {
        errorDiv.textContent = 'Coupon code is required.';
        return false;
    } else if (!/^[A-Z0-9]*$/.test(couponCode)) {
        errorDiv.textContent = 'Only uppercase alphabets and numbers are allowed.';
        return false;
    } else {
        errorDiv.textContent = '';
        return true;
    }
}

