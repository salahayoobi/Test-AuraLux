    <script>

function removeErrorMessage(input) {
    const categoryId = input.id.split('_')[1];
    const errorMessage = document.getElementById(`error_${categoryId}`);
    if (errorMessage) {
        errorMessage.style.display = 'none';
    }
}

function validatePercentage(input, maxValue) {
    const categoryId = input.id.split('_')[1];
    const errorMessage = document.getElementById(`error_${categoryId}`);
    const value = parseInt(input.value);

    if (value > maxValue) {
        if (errorMessage) {
            errorMessage.style.display = 'block';
        }
        input.value = ''; // Clear the input field or set it to the maximum allowed value
    }
}

        // Function to toggle active class on session content and buttons
        function toggleActiveSession(sessionId) {
            document.querySelectorAll('.session-content').forEach(content => {
                if (content.id === sessionId) {
                    content.classList.add('active');
                } else {
                    content.classList.remove('active');
                }
            });

            document.querySelectorAll('.navigation-bar button').forEach(button => {
                if (button.id === `${sessionId}Btn`) {
                    button.classList.add('active');
                } else {
                    button.classList.remove('active');
                }
            });
        }

        // Add click event listeners to navigation buttons
        document.getElementById('productOffersBtn').addEventListener('click', function () {
            toggleActiveSession('productOffers');
        });

        document.getElementById('categoryOffersBtn').addEventListener('click', function () {
            toggleActiveSession('categoryOffers');
        });

        document.getElementById('brandOffersBtn').addEventListener('click', function () {
            toggleActiveSession('brandOffers');
        });

        document.getElementById('referralOffersBtn').addEventListener('click', function () {
            toggleActiveSession('referralOffers');
        });

        // Show product offers by default
        toggleActiveSession('productOffers');

        // Product Offer Update

        const productsArray = <%- JSON.stringify(products) %> ;

        document.addEventListener('DOMContentLoaded', function () {
    const saveButtons = document.querySelectorAll('.save-btn');
    const removeButtons = document.querySelectorAll('.remove-btn');

    saveButtons.forEach((button, index) => {
        button.addEventListener('click', function () {
            handleSave(index);
        });
    });

    removeButtons.forEach((button, index) => {
        button.addEventListener('click', function () {
            handleRemove(index);
        });
    });

    function handleSave(index) {
        const productId = productsArray[index]._id;
        const offerPriceInput = document.getElementById(`offerPrice_${index}`);
        const expiryDateInput = document.getElementById(`expiryDate_${index}`);

        const offerPrice = offerPriceInput.value;
        const expiryDate = expiryDateInput.value;

        fetch('/admin/offers/update-product-offer', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId,
                offerPrice: offerPrice,
                expiryDate: expiryDate
            })
        })
        .then(response => {
            if (response.ok) {
                console.log('Product offer updated successfully');
                swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Product offer updated successfully",
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                console.error('Failed to update product offer');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }

    function handleSave(index) {
        const productId = productsArray[index]._id;
        const offerPriceInput = document.getElementById(`offerPrice_${index}`);
        const expiryDateInput = document.getElementById(`expiryDate_${index}`);

        const offerPrice = offerPriceInput.value;
        const expiryDate = expiryDateInput.value;

        fetch('/admin/offers/update-product-offer', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId,
                offerPrice: offerPrice,
                expiryDate: expiryDate
            })
        })
        .then(response => {
            if (response.ok) {
                console.log('Product offer updated successfully');
                swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Product offer updated successfully",
                    showConfirmButton: false,
                    timer: 1500
                });
            } else {
                console.error('Failed to update product offer');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }

    function handleRemove(index) {
        const productId = productsArray[index]._id;

        fetch('/admin/offers/remove-product-offer', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({
                productId: productId
            })
        })
        .then(response => {
            if (response.ok) {
                console.log('Product offer removed successfully');
                swal.fire({
                    position: "top-end",
                    icon: "success",
                    title: "Product offer removed successfully",
                    showConfirmButton: false,
                    timer: 1500
                });
                // Update offerPrice input value to the default product price
                const offerPriceInput = document.getElementById(`offerPrice_${index}`);
                offerPriceInput.value = productsArray[index].price;
            } else {
                console.error('Failed to remove product offer');
            }
        })
        .catch(error => {
            console.error('Error:', error);
        });
    }
});


document.addEventListener('DOMContentLoaded', function () {
    const saveButtons = document.querySelectorAll('.save-button');
    const removeButtons = document.querySelectorAll('.remove-button');

    saveButtons.forEach(button => {
        button.addEventListener('click', function () {
            const categoryId = this.dataset.categoryId;
            const expiryDateInput = document.getElementById(`expiryDate_${categoryId}`);
            const offerPercentageInput = document.getElementById(`offerAmount_${categoryId}`);

            if (expiryDateInput && offerPercentageInput) {
                const offerExpiryDate = expiryDateInput.value;
                const offerPercentage = offerPercentageInput.value;

                fetch('/admin/offers/update-category-offer', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify({
                        categoryId: categoryId,
                        offerExpiryDate: offerExpiryDate,
                        offerPercentage: offerPercentage
                    })
                })
                .then(response => {
                    if (response.ok) {
                        console.log('Category offer updated successfully');
                        swal.fire({
                            position: "top-end",
                            icon: "success",
                            title: "Category offer updated successfully",
                            showConfirmButton: false,
                            timer: 1500
                        });
                    } else {
                        console.error('Failed to update category offer');
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                });
            } else {
                console.error('Input elements not found');
            }
        });
    });

    removeButtons.forEach(button => {
        button.addEventListener('click', function () {
            const categoryId = this.dataset.categoryId;

            fetch('/admin/offers/remove-category-offer', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({
                    categoryId: categoryId
                })
            })
            .then(response => {
                if (response.ok) {
                    console.log('Category offer removed successfully');
                    swal.fire({
                        position: "top-end",
                        icon: "success",
                        title: "Category offer removed successfully",
                        showConfirmButton: false,
                        timer: 1500
                    });
                    const offerPercentageInput = document.getElementById(`offerAmount_${categoryId}`);
                if (offerPercentageInput) {
                    offerPercentageInput.value = 0;
                }
                } else {
                    console.error('Failed to remove category offer');
                }
            })
            .catch(error => {
                console.error('Error:', error);
            });
        });
    });
});


        
