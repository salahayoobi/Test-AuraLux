<% include('../layouts/header.ejs') %>

<main class="admin-welcome-container">
    <style>
        .admin-welcome-container {
            max-width: 600px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
        }

        a {
            display: block;
            margin-top: 10px;
            text-align: center;
            text-decoration: none;
            color: #5bc0de;
        }

        table {
            width: 100%;
            margin-top: 20px;
            border-collapse: collapse;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        img {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
        }

        .logout-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            text-decoration: none;
            color: #fff;
            background-color: #d9534f;
            padding: 10px;
            border-radius: 3px;
        }
    </style>

    <h1>Welcome, <%= admin.name %></h1>

    <a href="/admin/dashboard">Dashboard</a>

    <table>
        <tr>
            <td><img src="/userImages/<%= admin.image %>" alt="<%= admin.image %>" style="height: 100px; width: 100px;"></td>
        </tr>
        <tr>
            <td>Email</td>
            <td><%= admin.email %></td>
        </tr>
        <tr>
            <td>Mobile</td>
            <td><%= admin.mobile %></td>
        </tr>
    </table>

    <a href="/logout" class="logout-link">Logout</a>

</main>

<% include('../layouts/footer.ejs') %>
