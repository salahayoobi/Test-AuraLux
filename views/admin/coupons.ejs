                        All rights reserved
                    </div>
                </div>
            </div>
        </footer>
    </main>
    <script>
        // Add event listener for active button clicks
        document.querySelectorAll('.active-button').forEach(button => {
            button.addEventListener('click', function () {
                const couponId = this.getAttribute('data-id');
                fetch(`/admin/update-coupon-status?id=${couponId}`, {
                    method: 'POST',
                    // You can customize headers and other parameters as needed
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            // Update button text and class
                            if (data.isActive) {
                                this.textContent = 'Yes';
                                this.classList.remove('btn-danger');
                                this.classList.add('btn-success');
                                this.style.backgroundColor = 'green'; // Change background color to green
                                localStorage.setItem(`couponStatus-${couponId}`, 'active'); // Store status in local storage
                            } else {
                                this.textContent = 'No';
                                this.classList.remove('btn-success');
                                this.classList.add('btn-danger');
                                this.style.backgroundColor = 'red'; // Change background color to red
                                localStorage.setItem(`couponStatus-${couponId}`, 'inactive'); // Store status in local storage
                            }
                        } else {
                            // Handle error response
                            console.error('Error updating coupon status');
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            });
        });

        // Restore button colors based on stored status when the page loads
        window.addEventListener('load', function () {
            document.querySelectorAll('.active-button').forEach(button => {
                const couponId = button.getAttribute('data-id');
                const status = localStorage.getItem(`couponStatus-${couponId}`);
                if (status === 'active') {
                    button.textContent = 'Yes';
                    button.classList.remove('btn-danger');
                    button.classList.add('btn-success');
                    button.style.backgroundColor = 'green';
                } else if (status === 'inactive') {
                    button.textContent = 'No';
                    button.classList.remove('btn-success');
                    button.classList.add('btn-danger');
                    button.style.backgroundColor = 'red';
                }
            });
        });
    </script>

