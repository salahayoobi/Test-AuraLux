    <script>
        // Sales Chart
        document.addEventListener('DOMContentLoaded', async function () {
            const ctx = document.getElementById('mySalesChart').getContext('2d');
            const myChart = new Chart(ctx, {
                type: 'bar',
                data: {
                    labels: ['Monthly'],
                    datasets: [{
                        label: 'Sales',
                        data: [], // Empty data initially
                        backgroundColor: ['rgba(255, 99, 132, 0.2)'],
                        borderColor: ['rgba(255, 99, 132, 1)'],
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            const updateChart = async (interval) => {
                try {
                    const response = await fetch(`/admin/sales-data?interval=${interval}`);
                    const salesData = await response.json();

                    switch (interval) {
                        case 'daily':
                            myChart.data.datasets[0].data = salesData.dailySales.salesData;
                            myChart.data.labels = salesData.dailySales.labels;
                            myChart.data.datasets[0].backgroundColor = ['rgba(255, 99, 132, 0.6)'];
                            myChart.data.datasets[0].borderColor = ['rgba(255, 99, 132, 1)'];
                            const dailyHeading = document.getElementById('chartHeading');
                            dailyHeading.textContent = 'Daily Sales';
                            dailyHeading.style.color = 'rgba(255, 99, 132, 1)';
                            break;
                        case 'weekly':
                            myChart.data.datasets[0].data = salesData.weeklySales.salesData;
                            myChart.data.labels = salesData.weeklySales.labels;
                            myChart.data.datasets[0].backgroundColor = ['rgba(54, 162, 235, 0.6)'];
                            myChart.data.datasets[0].borderColor = ['rgba(54, 162, 235, 1)'];
                            const weeklyHeading = document.getElementById('chartHeading');
                            weeklyHeading.textContent = 'Weekly Sales';
                            weeklyHeading.style.color = 'rgba(54, 162, 235, 1)';

                            break;
                        case 'monthly':
                            myChart.data.datasets[0].data = salesData.monthlySales.salesData;
                            myChart.data.labels = salesData.monthlySales.labels;
                            myChart.data.datasets[0].backgroundColor = ['rgba(255, 152, 49, 0.6)'];
                            myChart.data.datasets[0].borderColor = ['rgba(255, 152, 49, 1)'];
                            const monthlyHeading = document.getElementById('chartHeading');
                            monthlyHeading.textContent = 'Monthly Sales';
                            monthlyHeading.style.color = 'rgba(255, 152, 49, 1)';
                            break;
                        case 'yearly':
                            myChart.data.datasets[0].data = salesData.yearlySales.salesData;
                            myChart.data.labels = salesData.yearlySales.labels;
                            myChart.data.datasets[0].backgroundColor = ['rgba(0, 163, 14, 0.6)'];
                            myChart.data.datasets[0].borderColor = ['rgba(0, 163, 14, 1)'];
                            const yearlyHeading = document.getElementById('chartHeading');
                            yearlyHeading.textContent = 'Yearly Sales';
                            yearlyHeading.style.color = 'rgba(0, 163, 14, 1)';
                            break;
                        default:
                            break;
                    }

                    myChart.update();
                } catch (error) {
                    console.error('Error updating chart:', error);
                }
            };

            document.getElementById('monthlyButton').addEventListener('click', () => {
                updateChart('monthly');
            });
            document.getElementById('dailyButton').addEventListener('click', () => {
                updateChart('daily');
            });
            document.getElementById('weeklyButton').addEventListener('click', () => {
                updateChart('weekly');
            });
            document.getElementById('yearlyButton').addEventListener('click', () => {
                updateChart('yearly');
            });

            const intervals = ['yearly', 'daily', 'weekly', 'monthly'];
            let currentIntervalIndex = 0;
            const updateChartLoop = () => {
                setInterval(() => {
                    const nextIntervalIndex = (currentIntervalIndex + 1) % intervals.length;
                    const nextInterval = intervals[nextIntervalIndex];
                    updateChart(nextInterval);
                    currentIntervalIndex = nextIntervalIndex;
                }, 5000);
            };

            updateChartLoop();

            updateChart('monthly');
        });

        // Pie Chart
        document.addEventListener('DOMContentLoaded', function () {
            var ctx = document.getElementById('myPieChart').getContext('2d');
            var myPieChart = new Chart(ctx, {
                type: 'doughnut',
                data: {
                    labels: ['Delivered', 'Processing', 'Cancelled', 'Returned'],
                    datasets: [{
                        label: 'Total Sales',
                        data: ["<%= delivered %>", "<%= processing %>", "<%= cancelled %>", "<%= returned %>"],
                        backgroundColor: [
                            'rgba(0, 163, 14, 0.6)',
                            'rgba(255, 206, 86, 0.6)',
                            'rgba(255, 0, 0, 0.6)',
                            'rgba(170, 0, 255, 0.6)'
                        ],
                        borderColor: [
                            'rgba(0, 163, 14, 1)',
                            'rgba(255, 206, 86, 1)',
                            'rgba(255, 0, 0, 1)',
                            'rgba(170, 0, 255, 1)'
                        ],
                        borderWidth: 1
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    scales: {
                        yAxes: [{
                            display: false
                        }],
                        xAxes: [{
                            display: false
                        }]
                    }
                }
            });
        });
    </script>


