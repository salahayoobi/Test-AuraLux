<% include('../layouts/header.ejs') %>

<main class="edit-user-container">
    <style>
        .edit-user-container {
            max-width: 400px;
            margin: 50px auto;
            padding: 20px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
        }

        form {
            margin-top: 20px;
        }

        label {
            display: block;
            margin-bottom: 5px;
        }

        input {
            width: 100%;
            padding: 8px;
            margin-bottom: 10px;
            box-sizing: border-box;
        }

        .radio-group {
            margin-bottom: 10px;
            display: flex;
            align-items: center;
        }

        .radio-group label {
            margin-right: 15px;
        }

        input[type="radio"] {
            margin-right: 5px;
        }

        input[type="submit"] {
            background-color: #5bc0de;
            color: #fff;
            padding: 10px;
            border: none;
            border-radius: 3px;
            cursor: pointer;
        }

        a {
            display: block;
            margin-top: 10px;
            text-align: center;
            text-decoration: none;
            color: #5bc0de;
        }
    </style>

    <h1>Edit User</h1>

    <form action="" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" placeholder="Enter Name" value="<%= user.name %>" required>
        
        <label for="email">Email:</label>
        <input type="email" id="email" name="email" placeholder="Enter Email" value="<%= user.email %>" required>

        <label for="mobile">Mobile:</label>
        <input type="text" id="mobile" name="mobile" placeholder="Enter Mobile" value="<%= user.mobile %>" required>

        <div class="radio-group">
            <label for="verify">Verified:</label>
            <input type="radio" id="verifyYes" name="verify" value="1" <% if(user.is_verified == 1){ %> checked <% } %>> Yes
            <input type="radio" id="verifyNo" name="verify" value="0" <% if(user.is_verified == 0){ %> checked <% } %>> No
        </div>

        <input type="hidden" name="id" value="<%= user._id %>">
        <br><br>
        <input type="submit" value="Update User">
    </form>

    <a href="/admin/">Go to Dashboard</a>

</main>

<% include('../layouts/footer.ejs') %>
