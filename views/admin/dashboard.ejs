    <script>
        function toggleBlock(userId, action) {
            var formId = '#' + (action === 'unblock' ? 'unblockForm' : 'blockForm') + userId;
            var buttonText = $(formId + ' button').text();

            console.log('Form ID:', formId);
            console.log('Button Text:', buttonText);

            $.ajax({
                type: 'POST',
                url: $(formId).attr('action'),
                data: { userId: userId, action: action },
                success: function (response) {
                    console.log('AJAX request successful');
                    console.log('Server response:', response);

                    // Toggle button text only if the action was successful
                    $(formId + ' button').text(buttonText === 'Block' ? 'Unblock' : 'Block');
                    window.location.reload();
                },
                error: function (error) {
                    console.error('Error during form submission');
                    console.error('Error details:', error);

                    // Restore the original button text if there was an error
                    $(formId + ' button').text(buttonText);
                }
            });
        }

    </script>
