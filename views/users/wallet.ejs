    <style>
        .wallet-container {
            display: flex;
            flex-direction: row;
            justify-content: space-between;
            max-width: 1200px;
            margin: 20px auto;
            overflow: hidden;
        }

        .balance-debit-credit {
            margin: 40px;
            display: flex;
            justify-content: space-around;
            flex-basis: 50%;
            height: fit-content;
            column-gap: 20px;
        }

        .transaction-history {
            flex-basis: 50%;
        }

        /* Styles for balance, debit, credit boxes */
        .balance-container,
        .debit-container,
        .credit-container {
            width: 200px;
            padding: 20px;
            border-radius: 8px;
            background-color: #c6ffa7;
            box-shadow: 0px 4px 8px rgba(0, 0, 0, 0.1);
            margin-bottom: 20px;
        }

        .balance h2,
        .debit h2,
        .credit h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 10px;
        }

        .balance p {
            font-size: 28px;
            color: #000;
            margin: 0;
            font-weight: bold;
        }

        .debit p {
            font-size: 28px;
            color: #ff0000;
            /* Red color for debit */
            margin: 0;
            font-weight: bold;
        }

        .credit p {
            font-size: 28px;
            color: #008000;
            /* Green color for credit */
            margin: 0;
            font-weight: bold;
        }


        .top-up-button {
            background-color: #0066ff;
            color: #fff;
            border: none;
            padding: 8px 16px;
            border-radius: 5px;
            cursor: pointer;
            margin-top: 10px;
        }

        /* Styles for transaction history */
        .transaction-history h2 {
            color: #333;
            font-size: 24px;
            margin-bottom: 15px;
        }

        .transaction-history ul {
            list-style-type: none;
            padding: 0;
        }

        .transaction-history li {
            border-bottom: 1px solid #ddd;
            padding: 15px 0;
            color: #333;
            transition: background-color 0.3s ease;
        }

        .transaction-history li:last-child {
            border-bottom: none;
        }

        .transaction-history li:hover {
            background-color: #f5f5f5;
        }
    </style>

