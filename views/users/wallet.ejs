                                            <%= transaction[i].date.toLocaleString('en-US', { timeZone: 'UTC' }) %><br>
                                </li>
                                <% } %>
                                    <% } else { %>
                                        <li>No Transactions</li>
                                        <% } %>
                    </ul>
                    <% if (transactionCount> 5) { %>
                        <nav aria-label="Transaction Pagination">
                            <ul class="pagination">
                                <% for (let i=0; i < Math.ceil(transactionCount / 5); i++) { %>
