        function confirmTopUp() {
            var topUpAmount = document.getElementById('topUpAmount').value;

            var modal = document.getElementById('topUpModal');
            modal.style.display = 'none';

            var modalBackdrop = document.getElementsByClassName('modal-backdrop')[0];
            if (modalBackdrop) {
                modalBackdrop.parentNode.removeChild(modalBackdrop);
            }

            fetch('/account/wallet/top-up', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                },
                body: JSON.stringify({ amount: topUpAmount }),
            })
                .then(response => response.json())
                .then(data => {
                    var options = {
                        key: 'rzp_test_vGryABnhipIEr8',
                        amount: data.amount * 100,
                        currency: 'INR',
                        order_id: data.id,
                        name: 'Your Company Name',
                        description: 'Top Up Wallet',
                        handler: function (response) {
                            Swal.fire({
                                position: 'top-end',
                                icon: 'success',
                                title: 'Payment Successful! Payment ID: ' + response.razorpay_payment_id,
                                showConfirmButton: false,
                                timer: 1500
                            });

                            fetch('/account/wallet/update-wallet', {
                                method: 'POST',
                                headers: {
                                    'Content-Type': 'application/json',
                                },
                                body: JSON.stringify({ amount: topUpAmount }),
                            })
                                .then(response => response.json())
                                .then(data => {
                                    console.log('Wallet update response:', data);
                                    $('#availableBalance').fadeOut(100, function () {
                                        $(this).html('₹ ' + data.balance).fadeIn(1000);
                                    });
                                    $('#creditAmount').fadeOut(100, function () {
                                        $(this).html('₹ ' + data.credit).fadeIn(1000);
                                    });
                                })
                                .catch(error => {
                                    console.error('Error updating wallet:', error);
                                });
                        },
                        prefill: {
                            name: 'Customer Name',
                            email: 'customer@example.com',
                            contact: '9999999999',
                        },
                        notes: {
                            address: 'Customer Address',
                        },
                        theme: {
                            color: '#528FF0',
                        },
                    };
                    var rzp = new Razorpay(options);
                    rzp.open();
                })
                .catch(error => {
                    console.error('Error:', error);
                    alert('Error occurred while processing payment!');
                });
        }

