    <main class="main">
        <section class="content-main col-10">
            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Order detail</h2>
                    <p>Details for Order ID: <%= order.items[0].orderId %>
                    </p>
                </div>
                <div class="order-status" style="margin-right: 20px;">
                    <p style="color: black; padding: 5px; background-color: <%= getStatusColor(order.status) %>; border-radius: 10%;"><%= order.status %></p>
                </div>
                <%
                                                                    function getStatusColor(status) {
                                                                        switch (status) {
                                                                            case 'Pending':
                                                                                return 'orange';
                                                                            case 'Processing':
                                                                                return 'yellow';
                                                                            case 'Shipped':
                                                                                return 'lightblue';
                                                                            case 'Delivered':
                                                                                return 'green';
                                                                            case 'Cancelled':
                                                                                return 'red';
                                                                            case 'Returned':
                                                                                return 'purple';
                                                                            default:
                                                                                return 'white'; // Default color
                                                                        }
                                                                    }
                                                                    %>
            </div>
            <div class="card">
