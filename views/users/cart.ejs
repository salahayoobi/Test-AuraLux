                                <thead>
                                    <tr class="main-heading">
                                        <th scope="col">Image</th>
                                        <th scope="col">Name</th>
                                        <th scope="col">Price</th>
                                        <th scope="col">Quantity</th>
                                        <th scope="col">Subtotal</th>
                                        <th scope="col">Remove</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (cart && cart.items && cart.items.length> 0) { %>
                                        <% for (let i=0; i < cart.items.length; i++) { %>
                                            <tr id="item-<%= cart.items[i].productId._id %>">
                                                <td class="image product-thumbnail"><img
                                                        src="/productImages/<%= cart.items[i].productId.image[0] %>"
                                                        alt="#"></td>
                                                <td class="product-des product-name">
                                                    <h5 class="product-name"><a
                                                            href="/home-product-details?id=<%= cart.items[i].productId._id %>">
                                                            <%= cart.items[i].productId.productName %>
                                                        </a></h5>
                                                    <p class="font-xs">
                                                        <%= cart.items[i].productId.subCategory %><br>
                                                            <%= cart.items[i].productId.category.name %>
                                                    </p>
                                                </td>
                                                <% if(cart.items[i].productId.price> cart.items[i].productId.offerPrice
                                                    ){ %>
                                                    <td class="text-right" data-title="Cart">
                                                        <p style="font-weight: 600;">₹<%= cart.items[i].price %>
                                                        </p>
                                                        <del><span>₹<%= cart.items[i].productId.price %> </span></del>
                                                    </td>
                                                    <% } else { %>
                                                        <td class="text-right" data-title="Cart">
                                                            <span>₹<%= cart.items[i].price %> </span>
                                                        </td>
                                                        <% } %>

                                                            <td class="text-center" data-title="Stock">
                                                                <div class="detail-qty border radius m-auto">
                                                                    <a href="#" class="qty-down"
                                                                        onclick="updateQuantity('<%= cart.items[i].productId._id %>', <%= cart.items[i].quantity - 1 %>)">
                                                                        <i class="fi-rs-angle-small-down"></i>
                                                                    </a>
                                                                    <span class="qty-val">
                                                                        <%= cart.items[i].quantity %>
                                                                    </span>
                                                                    <a href="#" class="qty-up"
                                                                        onclick="updateQuantity('<%= cart.items[i].productId._id %>', <%= cart.items[i].quantity + 1 %>)">
                                                                        <i class="fi-rs-angle-small-up"></i>
                                                                    </a>
                                                                </div>
                                                            </td>
                                                            <td class="text-right" data-title="Cart"><span>₹<%=
                                                                        cart.items[i].price %> </span></td>
                                                            <td class="action" data-title="Remove">
                                                                <a href="#" class="text-muted"
                                                                    onclick="removeCartItem('<%= cart.items[i].productId._id %>')">
                                                                    <i class="fi-rs-trash"></i>
                                                                </a>
                                                            </td>
                                            </tr>
                                            <% } %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="6" class="text-center empty-cart">
                                                            <p>Cart Is Empty</p>
                                                        </td>
                                                    </tr>
                                                    <% } %>
                                                        <tr>
                                                            <td colspan="6" class="text-end">
                                                                <a href="#" class="text-muted"
                                                                    onclick="removeAllItemsFromCart()"><i
                                                                        class="fi-rs-cross-small"></i> Clear Cart</a>
                                                            </td>
                                                        </tr>
                                </tbody>
                            </table>

                        </div>
                        <div class="cart-action text-end">
