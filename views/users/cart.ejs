    <script>
        function removeCartItem(productId) {
            // Show confirmation dialog
            Swal.fire({
                title: "Are you sure?",
                text: "You won't be able to revert this!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete it!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/cart/remove-item', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ productId: productId })
                    })
                        .then(response => {
                            if (response.ok) {
                                const itemRow = document.getElementById('item-' + productId);
                                if (itemRow) {
                                    itemRow.remove();
                                }
                                const remainingItems = document.querySelectorAll('.table.shopping-summery tbody tr');
                                console.log(remainingItems.length);
                                if (remainingItems.length === 1) {
                                    window.location.reload();
                                    const emptyCartMessage = document.querySelector('.empty-cart');
                                    if (emptyCartMessage) {
                                        emptyCartMessage.style.display = 'block';
                                    }
                                }
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "Your item has been removed from the cart.",
                                    icon: "success"
                                });
                            } else {
                                console.error('Failed to remove item from cart');
                                Swal.fire({
                                    title: "Error",
                                    text: "Failed to remove item from cart.",
                                    icon: "error"
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                title: "Error",
                                text: "An error occurred while removing the item.",
                                icon: "error"
                            });
                        });
                }
            });
        }

        function updateQuantity(productId, newQuantity) {
            if (newQuantity === 0) {
                removeCartItem(productId);
            } else if (newQuantity > 5) {
                Swal.fire({
                    icon: 'error',
                    title: 'Quantity Limit Exceeded',
                    text: 'You can order a maximum of 5 quantities for the same product.',
                    confirmButtonText: 'OK'
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.reload();
                    }
                });

                return;
            } else {
                const data = { productId, quantity: newQuantity };
                fetch('/cart/update-cart-item-quantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(data)
                })
                    .then(response => response.json())
                    .then(data => {
                        if (data.error) {
                            Swal.fire({
                                icon: 'error',
                                title: 'Error',
                                text: data.error,
                                confirmButtonText: 'OK',
                                allowOutsideClick: false
                            }).then((result) => {
                                if (result.isConfirmed) {
                                    window.location.reload();
                                }
                            });

                        } else {
                            window.location.reload();
                            document.querySelector(`#item-${productId} .qty-val`).innerText = data.quantity;
                            document.querySelector(`#item-${productId} .text-right span`).innerText = `₹${data.price}`;
                            document.querySelector('.cart_total_amount .font-lg').innerText = `₹${data.totalPrice}`;
                            document.querySelector('.cart_total_amount .font-xl').innerText = `₹${data.totalPrice}`;
                        }
                    })
                    .catch(error => {
                        console.error('Error:', error);
                    });
            }
        }



        function removeAllItemsFromCart() {
            Swal.fire({
                title: "Are you sure?",
                text: "This will remove all items from your cart!",
                icon: "warning",
                showCancelButton: true,
                confirmButtonColor: "#3085d6",
                cancelButtonColor: "#d33",
                confirmButtonText: "Yes, delete all items!"
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch('/cart/clear-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        }
                    })
                        .then(response => {
                            if (response.ok) {

                                window.location.reload(); 
                                Swal.fire({
                                    title: "Deleted!",
                                    text: "All items have been removed from the cart.",
                                    icon: "success"
                                });
                            } else {
                                console.error('Failed to remove all items from cart');
                                Swal.fire({
                                    title: "Error",
                                    text: "Failed to remove all items from cart.",
                                    icon: "error"
                                });
                            }
                        })
                        .catch(error => {
                            console.error('Error:', error);
                            Swal.fire({
                                title: "Error",
                                text: "An error occurred while removing all items.",
                                icon: "error"
                            });
                        });
                }
            });
        }

        document.getElementById('applyCouponBtn').addEventListener('click', function (event) {
            event.preventDefault();

            const couponCodeInput = document.getElementById('couponInput');
            const couponCode = couponCodeInput.value.trim();

            if (!couponCode) {
                Swal.fire({
                    title: "Coupon Code Required",
                    text: "Please enter a coupon code.",
                    icon: "error"
                });
                return;
            }

            fetch('/cart/apply-coupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                },
                body: JSON.stringify({ couponCode: couponCode })
            })
                .then(response => response.json())
                .then(data => {
                    document.querySelector('.cart_total_amount .font-xl').innerText = `₹${data.updatedTotal}`;
                    document.querySelector('.cart_total_amount.coupon_discount_amount').innerText = `₹${data.discountPrice}`;
                    const applyButton = document.getElementById('applyCouponBtn');
                    const removeButton = document.getElementById('removeCouponBtn');
                    if (data.discountPrice) {
                        removeButton.style.display = 'inline-block';
                        applyButton.style.display = 'none';
                    } else {
                        applyButton.style.display = 'inline-block';
                        removeButton.style.display = 'none';
                    }
                    Swal.fire({
                        title: "Coupon Applied!",
                        text: "Your coupon has been applied successfully.",
                        icon: "success"
                    });
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: "Error",
                        text: "An error occurred while applying the coupon.",
                        icon: "error"
                    });
                });

            couponCodeInput.value = couponCode;
        });

        const removeButton = document.getElementById('removeCouponBtn');

        removeButton.addEventListener('click', function () {
            fetch('/cart/remove-coupon', {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json'
                }
            })
                .then(response => {
                    if (response.ok) {
                        updateUI({ couponApplied: false });
                        Swal.fire({
                            title: "Coupon Removed",
                            text: "Your coupon has been removed successfully.",
                            icon: "success"
                        });
                    } else {
                        Swal.fire({
                            title: "Error",
                            text: "Failed to remove coupon.",
                            icon: "error"
                        });
                    }
                })
                .catch(error => {
                    console.error('Error:', error);
                    Swal.fire({
                        title: "Error",
                        text: "An error occurred while removing the coupon.",
                        icon: "error"
                    });
                });
        });

    </script>
