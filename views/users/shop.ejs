    <script>
        const sortOptions = document.querySelectorAll('#sortOptions li a');
        const selectedSortOption = document.getElementById('selectedSortOption');
        let currentSortOption = ""; // Variable to store the current sort option

        // Function to load products based on sort option
        const loadProducts = async (sortOption) => {
            try {
                const currentPage = new URLSearchParams(window.location.search).get('page') || 1; // Extracting page parameter from URL
                const response = await fetch(`/shop/search?sort=${sortOption}&page=${currentPage}`); // Appending page parameter to the URL
                if (!response.ok) {
                    throw new Error('Failed to fetch products');
                }
                const productsData = await response.json();
                updateProductGrid(productsData);
                selectedSortOption.textContent = sortOption.charAt(0).toUpperCase() + sortOption.slice(1); // Update selected sort option text
                currentSortOption = sortOption; // Update current sort option
            } catch (error) {
                console.error(error);
            }
        };
        // Function to update product grid with new data
        const updateProductGrid = (products) => {
            const productGrid = document.getElementById('productGrid');
            productGrid.innerHTML = ''; // Clear previous content
            products.forEach(product => {
                const productHTML = `
            <div class="col-lg-4 col-md-4 col-12 col-sm-6">
                <div class="product-cart-wrap mb-30">
                    <div class="product-img-action-wrap">
                        <div class="product-img product-img-zoom">
                            <a href="/home-product-details?id=${product._id}">
                                <img class="default-img" src="/productImages/${product.image[0]}" alt="${product.image[0]}">
                                <img class="hover-img" src="/productImages/${product.image[1]}" alt="${product.image[1]}">
                            </a>
                        </div>
                        <div class="product-action-1">
                            <a aria-label="Quick view" class="action-btn hover-up" data-bs-toggle="modal" data-bs-target="#quickViewModal">
                                <i class="fi-rs-search"></i>
                            </a>
                            <a aria-label="Add To Wishlist" class="action-btn hover-up" href="shop-wishlist.html">
                                <i class="fi-rs-heart"></i>
                            </a>
                            <a aria-label="Compare" class="action-btn hover-up" href="shop-compare.html">
                                <i class="fi-rs-shuffle"></i>
                            </a>
                        </div>
                        <div class="product-badges product-badges-position product-badges-mrg">
                            ${product.stock === 0 ? '<span class="out-of-stock">Out of Stock</span>' :
                        product.stock <= 5 ? `<span class="only-left">Only ${product.stock} piece(s) left</span>` :
                            '<span class="hot">Hot</span>'}
                        </div>
                    </div>
                    <div class="product-content-wrap">
                        <div class="product-category">
                            <a href="shop-grid-right.html">${product.productBrand}</a>
                        </div>
                        <h2><a href="/home-product-details">${product.productName}</a></h2>
                        <div class="product-price">
                            <span>₹${product.price}</span>
                        </div>
                        <div class="product-action-1 show">
                            <a aria-label="Add To Cart" class="action-btn hover-up" href="shop-cart.html">
                                <i class="fi-rs-shopping-bag-add"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>`;
                productGrid.innerHTML += productHTML;
            });
        };


        // Event listener for sort options
        sortOptions.forEach(option => {
            option.addEventListener('click', function (event) {
                event.preventDefault(); // Prevent default link behavior
                const sortOption = this.getAttribute('href').split('=')[1];
                loadProducts(sortOption);
                sortOptions.forEach(opt => {
                    opt.classList.remove('active');
                });

                // Add 'active' class to the clicked sort option
                this.classList.add('active');
            });
        });



        $(document).ready(function () { 
            $('#searchInput').on('input', function () {
                var query = $(this).val();
                if (query.length > 0) {
                    $.ajax({
                        url: '/search', // Endpoint to handle search query
                        method: 'GET',
                        data: { query: query },
                        success: function (response) {
                            // Clear previous search results
                            $('#searchResults').empty();
                            // Iterate over each product in the response and append its name as a clickable link
                            response.forEach(function (product) {
                                var productHtml = '<div>';
                                productHtml += product.productName;
                                productHtml += '</div>';
                                $('#searchResults').append(productHtml);
                            });
                            // Set the href attribute of the anchor tag to the product page URL
                            if (response.length > 0) {
                                $('#searchResultsLink').attr('href', '/home-product-details?id=' + response[0]._id);
                            } else {
                                // If no results, remove href attribute
                                $('#searchResultsLink').removeAttr('href');
                            }
                        },
                        error: function (xhr, status, error) {
                            console.error(error);
                        }
                    });
                } else {
                    // Clear search results if search input is empty
                    $('#searchResults').empty();
                    // Remove href attribute if search input is empty
                    $('#searchResultsLink').removeAttr('href');
                }
            });
        });
    </script>





