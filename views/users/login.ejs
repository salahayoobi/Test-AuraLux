<% include('../layouts/header.ejs') %>

    <main class="login-container">
        <style>
            body {
                margin: 0;
                padding: 0;
                font-family: Arial, sans-serif;
                background-image: url('/assets/imgs/page/Login-BG2.jpg');
                background-size: cover;
                background-position: center;
                background-repeat: no-repeat;
            }

            .login-container {
                max-width: 400px;
                margin: 100px auto;
                padding: 20px;
                border-radius: 10px;
                box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
                background-color: rgba(255, 255, 255, 0.8);
                position: relative;
                text-align: center;
                color: #000;
            }

            .login-heading {
                color: #d4af37;
                margin-bottom: 20px;
            }

            .message-container {
                margin-top: 10px;
            }

            .message {
                color: #d9534f;
            }

            .successMessage { 
                color: forestgreen;
            }

            .login-form {
                align-content: center;
                margin-top: 20px;
            }

            .form-label {
                display: block;
                margin-bottom: 5px;
                color: #333;
            }

            .form-input {
                width: 100%;
                padding: 8px;
                margin-bottom: 10px;
                box-sizing: border-box;
                border: 1px solid #ccc;
                border-radius: 5px;
            }

            .submit-button,
            .register {
                background-color: #800080;
                color: #fff;
                padding: 10px;
                border: none;
                border-radius: 3px;
                cursor: pointer;
                width: 70%;
                max-width: 100%;
                display: block;
                margin: 10px auto;
                transition: background-color 0.3s ease;
            }

            .submit-button:hover,
            .register:hover {
                background-color: #4b0082;
            }

            .forgot-password {
                display: block;
                text-align: center;
                margin-top: 10px;
                text-decoration: none;
                color: #333;
            }
        </style>

        <div class="login-container">
            <h1 class="login-heading">Login</h1>

            <% if (typeof successMessage !=='undefined' ) { %>
                <div class="message-container">
                    <h4 class="successMessage">
                        <%= successMessage %>
                    </h4>
                </div>
                <% } %>

            <% if (typeof message !=='undefined' ) { %>
                <div class="message-container">
                    <h4 class="message">
                        <%= message %>
                    </h4>
                </div>
                <% } %>

                    <form action="/login" method="post" class="login-form">
                        <label for="email" class="form-label">Email</label>
                        <input type="text" id="userName" name="userName" required placeholder="Enter Email Or User Name"
                            class="form-input">

                        <label for="password" class="form-label">Password</label>
                        <input type="password" id="password" name="password" required placeholder="Enter Password"
                            class="form-input">

                        <input type="submit" value="Login" class="submit-button" style="font-size: 15px;">
                        <a href="/forgot-password" class="forgot-password">Forgot Password</a>
                    </form>
                    <a href="/register" class="register" style="text-decoration: none;">Register</a>
        </div>
    </main>

    <% include('../layouts/footer.ejs') %>